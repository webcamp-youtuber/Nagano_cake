<header class='top-page-header'>

    <div class="header-top-content">
      <!--管理者と顧客で表示変更-->
      <% if admin_signed_in? %>
        <%= link_to admin_root_path, class: 'header-title' do %>
          <div>Nagano-Cake</div>
          <div class='header-sub-title'>〜丘の小さなケーキ屋さん〜</div>
        <% end %>
      <% else %>
        <%= link_to root_path, class: 'header-title' do %>
          <div>Nagano-Cake</div>
          <div class='header-sub-title'>〜丘の小さなケーキ屋さん〜</div>
        <% end %>
      <% end %>

      <div class="nav">
        <ul class="lists-right">
        <% if admin_signed_in? %>
        <!--管理者がログインしている時-->
          <li><%= link_to "商品一覧",admin_products_path, class: 'fas fa-delicious nav-link text-light' %></li>
          <li><%= link_to "会員一覧",admin_customers_path, class: 'fas fa-users nav-link text-light' %></li>
          <li><%= link_to "注文履歴一覧",admin_root_path, class: 'fas fa-list nav-link text-light' %></li>
          <li><%= link_to "ジャンル一覧",admin_genres_path, class: 'fas fa-candy-cane nav-link text-light' %></li>
          <li><%= link_to "ログアウト",destroy_admin_session_path, method: :delete, class: 'fas fa-sign-out-alt nav-link text-light' %></li>
        <% elsif customer_signed_in? %>
        <!--顧客がログインしている時-->
          <li><%= link_to "マイページ",public_customers_path(current_customer), class: 'fas fa-user nav-link text-light' %></li>
          <li><%= link_to "商品一覧",public_products_path, class: 'fas fa-delicious nav-link text-light' %></li>
          <li><%= link_to "カート",public_cart_items_path, class: 'fas fa-shopping-cart nav-link text-light' %></li>
          <li><%= link_to "ログアウト",destroy_customer_session_path, method: :delete, class: 'fas fa-sign-out-alt nav-link text-light' %></li>
        <% else %>
        <!--ログイン前-->
          <li><%= link_to "About",homes_about_path, class: 'fas fa-link nav-link text-light' %></li>
          <li><%= link_to "商品一覧",public_products_path, class: 'fas fa-birthday-cake nav-link text-light' %></li>
          <li><%= link_to "新規登録",new_customer_registration_path, class: 'fas fa-user-plus nav-link text-light' %></li>
          <li><%= link_to "ログイン",new_customer_session_path, class: 'fas fa-sign-in-alt nav-link text-light' %></li>
        <% end %>
        </ul>
      </div>
    </div>

</header>

