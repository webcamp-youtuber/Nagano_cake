<div class="cover-user-edit">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">マイページ</h1>
    </div>
    <div>
     <% if customerr_signed_in? && @customer == current_cutomer %>
     <p class="d-flex justify-content-end">
       <%= link_to "編集する", edit_customer_path(@customer), class: "btn-sm btn-success" %>
     </p>
    <% end %>
    </div>
   <table class="table">
    <thead>
     <tr>
      <tr>
       <th class="table__col1">氏名</th>
       <td class="table__col2"><%= "@current.name" %></td>
      </tr>
      <tr>
        <th class="table__col1">カナ</th>
        <td class="table__col2"><%= "@customer.name_kana" %></td>
      </tr>
      <tr>
        <th class="table__col1">郵便番号</th>
        <td class="table__col2"><%= "@customer.post_code" %></td>
      </tr>
      <tr>
        <th class="table__col1">住所</th>
        <td class="table__col2"><%= "@customer.address" %></td>
      </tr>
      <tr>
        <th class="table__col1">電話番号</th>
        <td class="table__col2"><%= "@customer.telephon_number" %></td>
      </tr>
      <tr>
        <th class="table__col1">メールアドレス</th>
        <td class="table__col2"><%= "@customer.email" %></td>
      </tr>
      <th colspan="3"></th>
     </tr>
    </thead>
   </table>


    <div>
     <%= link_to 'Address', @address %>
     <%= f.submit '一覧を見る', class: "btn btn-success" %>
    </div>
    <div>
     <%= link_to 'Order', order_path %>
     <%= f.submit '一覧を見る', class: "btn btn-success" %>
    </div>
   </div>
  </div>
</div>