<div class="cover-user-edit">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">マイページ</h1>
    </div>
    <div>

     <p class="d-flex justify-content-end">
       <p>登録情報</p>
       <%= link_to "編集する", edit_public_customers_path, class: "btn-sm btn-success" %>
     </p>

    </div>
   <table class="table">
    <thead>
     <tr>
      <tr>
       <th class="table__col1">氏名</th>
       <td class="table__col2"><%= @customer.last_name %><%= @customer.first_name %></td>
      </tr>
      <tr>
        <th class="table__col1">カナ</th>
        <td class="table__col2"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th class="table__col1">郵便番号</th>
        <td class="table__col2"><%= @customer.post_code %></td>
      </tr>
      <tr>
        <th class="table__col1">住所</th>
        <td class="table__col2"><%= @customer.address %></td>
      </tr>
      <tr>
        <th class="table__col1">電話番号</th>
        <td class="table__col2"><%= @customer.telephon_number %></td>
      </tr>
      <tr>
        <th class="table__col1">メールアドレス</th>
        <td class="table__col2"><%= @customer.email %></td>
      </tr>
      <th colspan="3"></th>
     </tr>
    </thead>
   </table>


    <div>
     <p>配送先</p>
     <%= link_to "一覧を見る", public_addresses_path, class: "btn btn-success" %>
    </div>
    <div>
     <p>注文履歴</p>
     <%= link_to "一覧を見る", public_orders_path, class: "btn btn-success" %>
    </div>
   </div>
  </div>
</div>