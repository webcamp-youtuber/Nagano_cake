<div class=container>
  <div class='row'>
    <div class='mx-5'>
      <h2 class="table-secondary">　注文履歴詳細　</h2>
    </div>
  </div>
</div>
<br></br>

<div class='container'>
  <div class='row'>
    <div class='col-md-7'>
      <table class='table table-bordered border-dark'>
        <thead>
          <tr><b>注文情報</b></tr>
        </thead>
        <tbody>
          <tr>
            <th class='table-secondary'>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d/%T') %></td>
          </tr>
          <tr>
            <th class='table-secondary'>配送先</th>
            <td>〒<%= @order.post_code %><br></br><%= @order.address %></td>
          </tr>
          <tr>
            <th class='table-secondary'>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th class='table-secondary'>ステータス</th>
            <td><%= @order.order_status_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class='col-md-5'>
      <table class='table table-bordered border-dark'>
        <thead>
          <tr><b>請求情報</b></tr>
        </thead>
        <tbody>
          <tr>
            <th class='table-secondary'>商品合計</th>
            <td><%= @total_price %>円</td>
          </tr>
          <tr>
            <th class='table-secondary'>配送料</th>
            <td><%= @order.postage %>円</td>
          </tr>
          <tr>
            <th class='table-secondary'>ご請求額</th>
            <td><%= @order.bill_maney %>円</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <table class='table table-bordered border-dark'>
        <thead>
          <tr><b>注文内容</b></tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <th class='col-md-6 table-secondary'>商品</th>
            <th class='col-md-2 table-secondary'>単価（税込）</th>
            <th class='col-md-2 table-secondary'>個数</th>
            <th class='col-md-2 table-secondary'>小計</th>
          </tr>
          <tr>
            <td><%= order_detail.product.name %></td>
            <td><%= order_detail.product.selling_price %></td>
            <td><%= order_detail.quantity %></td>
            <td><%= order_detail.quantity*order_detail.product.selling_price %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>