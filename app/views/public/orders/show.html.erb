<div class=container>
 <div class='row'>
  <div class='mx-3'>
   <h2>注文履歴詳細</h2>
  </div>
 </div>
</div>

<div class='container-fluid '>
 <div class='row'>
   <div class='col-lg-3'>
    <table class='table table-hover'>
     <thead>
      <tr>注文情報</tr>
     </thead>
     <tbody>
      <tr>
       <th>注文日</th>
       <td><%= @order.created_at %></td>
      </tr>
       <tr>
        <th>配送先</th>
        <td><%= @order.adress %><%= @order.post_code %></td>
       </tr>
       <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method_i18n %></td>
       </tr>
       <tr>
        <th>ステータス</th>
        <td><%= @order.order_status_i18n %></td>
       </tr>
      </tbody>
   </table>
  </div>
 </div>
</div>

<div class='container-fluid '>
 <div class='row'>
  <div class='col-lg-3'>
   <table class='table table-hover'>
    <thead>
     <tr>請求情報</tr>
    </thead>
    <tbody>
     <tr>
      <th>商品合計</th>
      <td><%= @total_price %>円</td>
     </tr>
     <tr>
      <th>配送料</th>
      <td><%= @order.postage %>円</td>
     </tr>
     <tr>
      <th>ご請求額</th>
      <td><%= @order.bill_maney %>円</td>
     </tr>
    </tbody>
   </table>
  </div>
 </div>
</div>

  <div class='container-fluid '>
   <div class='row'>
    <div class='col-lg-3'>
     <table class='table table-hover'>
      <thead>
       <tr>注文内容</tr>
      </thead>
      <tbody>
      <% @order_details.each do |order_detail| %>
      <tr>
       <th>商品</th>
       <td><%= order_detail.product.name %></td>
      </tr>
      <tr>
       <th>単価（税込）</th>
       <td><%= order_detail.product.selling_price %></td>
      </tr>
      <tr>
       <th>個数</th>
       <td><%= order_detail.quantity %></td>
      </tr>
      <tr>
       <th>小計</th>
       <td><%= order_detail.quantity*order_detail.product.selling_price %></td>
      </tr>
      <% end %>
      </tbody>
    </table>
   </div>
  </div>
</div>