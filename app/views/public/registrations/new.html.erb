<div class="container-fluid">
  <div class="row">
    <div class="col-3 ml-3">
     <h2>新規会員登録</h2>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
   <div class='col-sm-8 offset-sm-2'>
    <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
        <div class="form-group">
          <br><%= f.label :氏 %><%= f.text_field :last_name, class: 'col-sm-3' %>
          <%= f.label :名 %><%= f.text_field :first_name, class: 'col-sm-3' %></br>
        </div>

        <div class="form-group">
          <br><%= f.label :セイ %><%= f.text_field :last_name_kana %>
          <%= f.label :メイ %><%= f.text_field :first_name_kana %></br>
        </div>

        <div class="form-group">
          <br><%= f.label :メールアドレス %><%= f.email_field :email %></br>
        </div>

        <div class="form-group">
          <br><%= f.label :郵便番号 %><%= f.text_field :post_code %></br>
        </div>

        <div class="form-group">
          <br><%= f.label :住所 %><%= f.text_field :address %></br>
        </div>


        <div class="form-group">
          <br><%= f.label :電話番号ハイフンなし %><%= f.text_field :telephon_number %></br>
        </div>

        <br><%= f.label :パスワード %>
         <%= f.password_field :password %>
        <% if @minimum_encrypted_password_length %>
          (<%= @minimum_encrypted_password_length %>6文字以上)
        <% end %></br>

        <br><%= f.label :確認用パスワード %>
         <%= f.password_field :password_confirmation %>
        <% if @minimum_encrypted_password_length %>
          (<%= @minimum_encrypted_password_length %>6文字以上)
        <% end %></br>

      <div class="grid-6">
          <%= f.submit "新規登録" ,class: 'btn btn-primary' %>
      </div>

      <p>既に登録済みの方</p>
      <p><%= render "public/shared/links" %></p>
      <p>からログインしてください。</p>
    <% end %>
   </div>
  </div>
</div>