<div class="row justify-content-center">
    <h2 class="mx-auto  pt-5 pb-5">商品一覧(全<%= @products.count %>件)</h2>
  
  <div class="row justify-content-center">
      <% @products. each do |product| %>
        <div class="card col-md-3 text-dark bg-light">
          <div class="card-img-top">
            <%= link_to public_product_path(product.id) do %>
              <%= attachment_image_tag product, :image, :fill, 340, 150 %>
            <% end %>
          </div>
          <div class="card-tatle text-center">
            <%= link_to product.name, public_product_path(product), class:"name" %>
          </div>
          <div class="card-text"></div>
          <div class="card-footer" style="align-bottom">
           <span><%= product.selling_price*1.1 .floor %>円(税込)</span>
          </div>
      </div>
    <% end %>
  </div>
  <%= paginate @products %>
</div>
