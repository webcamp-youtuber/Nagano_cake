<div class="container-fluid">
  <div class="row">
    <div class="col-3 ml-3" >
      <h4>ジャンル検索</h4>
        <p class="border"> ジャンル名</p>　<!-- ジャンル名は後ほど入力 -->
    </div>
  </div>
</div>

<!--商品一覧 -->
<div class="container">
  <div class="row">
    <h2 class="mx-auto  pt-5 pb-5">商品一覧(全<%= @products.count %>件)</h2>
  </div>
  <div class="container container-m">
    <div class="card-deck">
      <% @products.each do |product| %>
      <div class="card">
        <div class="card-body">
          <%= link_to(product_path(product.id)) do %><%= attachment_image_tag item, :image, size: '300x200', format: 'jpeg' %><% end %>
          <h3 class="card-title text-center"><%= product.product_name %></h3>
            <p class="card-text text-center"><%= product.add_tax_price.to_s(:delimited, delimiter: ',') %>円</p>
      　　<% end %>
      　</div>
      </div>
    </div>
  </div>
 </div>