<div class="row justify-content-center">
    <h2 class="mx-auto  pt-5 pb-5">商品一覧(全<%= @products.count %>件)</h2>
  </div>
  <div class="row justify-content-center">
    <div class="product col-md-9">
      <% @products.each do |product| %>
      <div class="card">
        <div class="card-body">
          <%= link_to public_product_path(product) do %>
            <%= attachment_image_tag product, :image, size: '150x150', format: 'jpeg' %>
          <% end %>
          <div class="card-title text-center">
            <%= link_to product.name, public_product_path(product), class:"name" %>
          </div>
          <div class="card-text text-center">
            <%= product.add_tax_price.to_s(:delimited, delimiter: ',') %>円
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
