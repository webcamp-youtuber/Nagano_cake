<div class="container-fluid">
  <div class="row">
    <div class="col-2 ml-2">
      <h1>ジャンル検索</h1>
        <p class="border"> ジャンル名</p>　<!-- ジャンル名は後ほど入力 -->
    </div>
  </div>
</div>

<!--商品一覧 -->
<div class="container">
  <div class="row">
    <h2 class="mx-auto pt-5 pb-5">商品一覧(全<%= @products.count %>件)</h2>
  </div>
  <div class="container container-m">
    <div class="card-deck">
      <% @products.each do |product| %>
      <div class="card">
        <div class="card-body">
          <%= link_to(product_path(product.id)) do %><%= attachment_image_tag item, :image, size: '200x200', format: 'jpeg' %><% end %>
          <h3 class="card-title text-center"><%= product.product_name %></h3>
          <% if product.is_sales_status == true %>
            <p class="card-text text-center"><%= product.price_without_tax %>円</p>
          <% elsif product.is_sales_status == false %>
            <p class="card-text text-center">売り切れ</p>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
 </div>