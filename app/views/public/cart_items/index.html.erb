<div class="container">
  <div class="row">
      <h3>ショッピングカート</h3>
        <%= link_to "カートを空にする", public_cart_items_path, method: :delete, class: "btn btn-danger d-inline ml-auto", "data-confirm" => "カート内の商品を削除してもよろしいですか？"  %>
  </div>
</div>

  <div class="row">

    <table class="cart_items">
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
       </tr>

        <% @cart_items.each do |cart_item| %>
        <tr>
        <td>

          <%= cart_item.product.name %>
        </td>

        <td>
          <%= cart_item.product.add_tax_price.to_s(:delimited) %>
        </td>
        <td>
          <%= form_with model: cart_item, url:"/public/cart_items/#{cart_item.id}", local: true do |f| %>
            <%= f.select :quantity, *[1..10] %>
            <%= f.submit '変更' %>
          <% end %>
        </td>
         <td>
          <%= cart_item.subtotal.to_s(:delimited) %>
        </td>
        <td>
          <%= link_to "削除する", public_cart_item_path(cart_item.id), method: :delete,class: "btn btn-danger" %>
        </td>
          <% @total += cart_item.subtotal %>
        </tr>
        <% end %>
    </table>

  </div>

<br><br>

  <div class="row">
    <div class="col">
      <%= link_to "買い物を続ける", public_products_path, class: "btn btn-primary" %>
    </div>
    <div>
      <table class="cart_items">
        <tr>
          <th>合計金額</th>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>


<!--データ渡す-->
  <div class="row">
    <%= link_to "情報入力に進む", new_public_order_path, class: "btn btn-success" %>
  </div>