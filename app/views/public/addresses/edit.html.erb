<div class="cover-user-edit">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">配送先編集</h1>
    </div>
    <div class="row justify-content-center">
      <%= form_for (@address) do |f| %>

        <div class="form-group">
          <label class="form-label">郵便番号</label>
          <%= f.text_field :post_code, class: "form-control" %>
        </div>
        <div class="form-group">
          <label class="form-label">住所</label>
          <%= f.text_field :address, class: "form-control" %>
        </div>
        <div class="form-group">
          <label class="form-label">宛名</label>
          <%= f.text_field :destination, class: "form-control" %>
        </div>
       <%= f.submit "変更内容を保存", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>
</div>