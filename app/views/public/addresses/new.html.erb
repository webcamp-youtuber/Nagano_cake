<% current_customer.id == customer.id %>
  <div class="row">
    <h1>配送先登録/一覧</h1>
    <%= form_for(@adress) do |f|%>
      <div class="field">
        <%= f.label :post_code, '郵便番号' %>
        <%= f.text_field :post_code %>
      </div>

      <div class="field">
        <%= f.label :address, '住所'%>
        <%= f.text_field :address %>
      </div>

      <div class="field">
        <%= f.label :destination, '宛名'%>
        <%= f.text_field :destination %>
      </div>
      
      <div class="actions">
            <%= f.submit "新規登録", class:"btn btn-default btn-block btn-base-1 mt-20" %>
      </div>
    <% end %>
  </div>