<div class="container">
  <div class="row">
    <h2>配送先登録/一覧</h2>

    <div class='col-sm-8 offset-sm-2'>
      <%= form_with model: @address, url:public_addresses_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :post_code, '郵便番号(ハイフンなし)', class: 'col-sm-4' %>
          <%= f.text_field :post_code, placeholder: "0000000" %>
        </div>
        <div class="form-group">
          <%= f.label :address, '住所', class: 'col-sm-4' %>
          <%= f.text_field :address, class: 'col-sm-7', placeholder: "東京都渋谷区代々木神園町町0−0" %>
        </div>
        <div class="form-group">
          <%= f.label :destination, '宛名', class: 'col-sm-4' %>
          <%= f.text_field :destination, class: 'col-sm-5', placeholder: "令和道子" %>
        </div>
        <div class="text-right">
         <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>

    <div class="col-sm-8 offset-sm-2">
      <table class="table table-bordered border-dark">
        <thead class="table-secondary">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th style="width: 30%"></th>
          </tr>
      　</thead>
      　<tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.post_code %></td>
              <td><%= address.address %></td>
              <td><%= address.destination %></td>
              <td>
                <%= link_to "編集する", edit_public_address_path(address),  class: "btn btn-primary" %>
                <%= link_to "削除する", public_address_path(address), method: :delete, "data-confirm" => "Are you sure？", class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>

