<div class="container">
  <div class="row">
    <h2>配送先登録/一覧</h2>
    <div class='col-sm-8 offset-sm-2'>
      <%= form_with model: @address, url:public_addresses_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :post_code, '郵便番号', class: 'col-sm-3' %>
          <%= f.text_field :post_code %>
        </div>

        <div class="form-group">
          <%= f.label :address, '住所', class: 'col-sm-3' %>
          <%= f.text_field :address, class: 'col-sm-8' %>
        </div>

        <div class="form-group">
          <%= f.label :destination, '宛名', class: 'col-sm-3' %>
          <%= f.text_field :destination, class: 'col-sm-5' %>
        </div>


        <div class="text-right">
         <%= f.submit "新規登録", class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>

    <div class="col-md-8 offset-md-1">
      <table class="table">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
      　</thead>
      　<tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.post_code %></td>
              <td><%= address.address %></td>
              <td><%= address.destination %></td>
              <td><%= link_to "編集する", edit_public_address_path(address),  class: "btn btn-large btn-primary" %></td>
              <td><button type="button" class="btn btn-danger"><%= link_to "削除する", public_address_path(address), method: :delete, "data-confirm" => "Are you sure？" %></button></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>

