<div class="container">
  <div class="row">
    <h1>配送先登録/一覧</h1>
    <%= form_with model: @address, url:public_addresses_path, local: true do |f| %>
      <div class="field">
        <%= f.label :post_code, '郵便番号' %>
        <%= f.text_field :post_code %>
      </div>

      <div class="field">
        <%= f.label :address, '住所' %>
        <%= f.text_field :address %>
      </div>

      <div class="field">
        <%= f.label :destination, '宛名' %>
        <%= f.text_field :destination %>
      </div>

      <div class="actions">
       <%= f.submit "新規登録", class:"form-control" %>
      </div>
    <% end %>
  </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <table class="table">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
      　</thead>
      　<tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.post_code %></td>
              <td><%= address.address %></td>
              <td><%= address.destination %></td>
              <td><%= link_to "Edit", edit_public_addresses, class: "btn btn-large btn-primary" %></td>
              <td><%= link_to "Destroy", public_addresses_index, method: :delete, "data-confirm" => "Are you sure？" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>

