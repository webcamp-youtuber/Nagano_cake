<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h3>注文履歴一覧</h3>
      <table class='table'>
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th class="text-right">注文個数</th>
            <th class="text-right">販売ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order|%>
          <tr>
            <td>
              <%= link_to admin_order_path(order) do%>
              <%= order.created_at.strftime('%Y/%m/%d/%T') %>
              <% end %>
            </td>
            <td>
              <%= order.customer.last_name %>
              <%= order.customer.first_name %>
            <td class="text-right">
              <%= order.order_details.count %>
            </td>
            <td class="text-right">
              <%= order.order_status_i18n %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= paginate @orders %>