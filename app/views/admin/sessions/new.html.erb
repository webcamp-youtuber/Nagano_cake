<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-3">
      <div class="order text-center">
        <h3>管理者ログイン</h3>
      </div>
    </div>
  </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row justify-content-center">
    
      <div class="field form-group col-md-9">
        <%= f.label :メールアドレス, class:"col-md-3" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-md-6" %>
      </div>
  </div>
  <div class="row justify-content-center">
      <div class="field form-group col-md-9">
        <%= f.label :パスワード, class:"col-md-3" %>
        <%= f.password_field :password, autocomplete: "current-password", class:"col-md-6" %>
      </div>
  </div>

  <div class="row justify-content-center">
    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  </div>
    <% end %>

    <%= render "admin/shared/links" %>

</div>
