<div class=container>
  <div class='row'>
    <div>
      <h2>商品詳細</h2>
    </div>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class='col-md-4'>
      <%= attachment_image_tag @product,:image,:fill,360,360,format:'jpeg' %>
    </div>
    <div class='col-md-8'>
      <table class='table table-hover'>
        <tbody>
          <tr>
            <%= link_to '編集', edit_admin_product_path(@product), class: 'btn btn-primary mb-3' %>
          </tr>
          <tr>
            <th>商品名</th>
            <td><%= @product.name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= @product.explanation %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= @product.genre.name %></td>
          </tr>
          <tr>
            <th>税込価格(税抜)</th>
            <td><%= @product.add_tax_price.to_s(:delimited) %>円(<%= @product.selling_price %>円)</td>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <td>
              <% if @product.is_selling == "on_sale" %>
                <span class='text-success'><%= @product.is_selling_i18n %></span>
              <% else %>
                <span class='text-secondary'><%= @product.is_selling_i18n %></span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>