<div class=container>
  <div class='row'>
    <div class='mx-3'>
      <h2>商品詳細</h2>
    </div>
    <div>
      <%= link_to '一覧画面', admin_products_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
<div class='container'>
  <div class='row'>
    <div class='col-md-4'>
      <%= attachment_image_tag @product,:image,:fill,360,360,format:'jpeg' %>
    </div>
    <div class='col-md-8'>
      <table class='table table-hover'>
        <tbody>
          <tr>
            <%= link_to '編集', edit_admin_product_path(@product), class: 'btn btn-primary mb-3' %>
          </tr>
          <tr>
            <th>商品名</th>
            <td><%= @product.name %></td>
          </tr>
          <tr>
            <th>商品一覧</th>
            <td><%= @product.explanation %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= @product.genre.name %></td>
          </tr>
          <tr>
            <th>税込価格(税抜)</th>
            <td><%= @product.add_tax_price.to_s(:delimited) %>円(<%= @product.selling_price %>円)</td>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <td><%= @product.is_selling_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>