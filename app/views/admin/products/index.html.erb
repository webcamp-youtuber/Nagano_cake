<div class='container'>
  <div class='row'>
  <%= link_to '新規登録', new_admin_product_path , class: 'btn btn-primary' %>
  <h2>商品一覧</h2>
  <table class='table table-hover'>
    <thead class='thead-default'>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td><%= link_to product.name, admin_product_path(product), class: "product_#{product.id}" %></td>
          <td><%= product.selling_price %></td>
          <td><%= product.genre.name %></td>
          <td><%= product.is_selling_i18n %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>