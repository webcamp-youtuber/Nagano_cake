<div class='container'>
  <div class='mb-3'>
    <h2>商品一覧</h2>
  </div>
  <div class='mb-3 text-right'>
    <%= link_to '新規登録', new_admin_product_path , class: 'btn btn-primary' %>
  </div>
  <div class='mb-3'>
    <table class='table table-hover'>
      <thead class='thead-default'>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>販売ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= link_to product.name, admin_product_path(product), class: "product_#{product.id}" %></td>
            <td><%= product.selling_price %>円</td>
            <td><%= product.genre.name %></td>
            <td>
              <% if product.is_selling == "on_sale" %>
                <span class='text-success'><%= product.is_selling_i18n %></span>
              <% else %>
                <span class='text-secondary'><%= product.is_selling_i18n %></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class='text-center'>
    <%= paginate @products %>
  </div>
</div>