<%= form_with model: @product, url: admin_products_path, local: true do |f| %>
<div class='container'>
  <div class='row'>
    <div class='col-sm-8 offset-md-2'>
      <div class='form-group'>
        <%= f.label '商品画像' ,class: 'col-sm-3' %>
        <%= f.attachment_field :image ,class: 'col-sm-7' %>
      </div>
      <div class='form-group'>
        <%= f.label '商品名', class: 'col-sm-3' %>
        <%= f.text_field :name, class: 'col-md-7' %>
      </div>
      <div class='form-group'>
        <%= f.label '商品説明', class: 'col-sm-3' %>
        <%= f.text_area :explanation, class: 'col-sm-7' %>
      </div>
      <div class='form-group'>
        <%= f.label 'ジャンル', class: 'col-sm-3' %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: '選択してください'}, class: 'col-md-7' %>
      </div>
      <div class='form-group'>
        <%= f.label '税抜価格', class: 'col-sm-3' %>
        <%= f.text_field :selling_price, class: 'col-sm-7' %>円
      </div>
      <div class='form-group'>
        <%= f.label '販売ステータス', class: 'col-sm-3' %>
        <%= f.radio_button :is_selling, :on_sale %>
        <%= f.label '販売中' %>
        <%= f.radio_button :is_selling, :no_sale %>
        <%= f.label '販売停止中' %>
      </div>
      <div class='text-center'>
        <%= f.submit '新規登録', class: 'btn btn-success' %>
      </div>
    </div>
  </div>
</div>
<% end %>