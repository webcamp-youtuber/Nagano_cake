<div class='container px5 px-sm-0'>
　<div class='row'>

    <div class='col-md-3'>
    <%= form_with model:@genre, url: admin_genres_path, local: true do |f| %>
      <div class="form-group">
        <br><%= f.label 'ジャンル' %></br>
        <br><%= f.text_field :name, class:'form-control genre_name' %></br>
        <br><%= f.submit '追加', class:'btn btn-primary btn-block' %></br>
      </div>
    <% end %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>ジャンル一覧</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>ジャンル名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集', edit_admin_genre_path(genre), class: 'btn-sm btn-primary' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>